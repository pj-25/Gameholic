<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gameholic.gameControlPanel.res.layouts.components.GetStarted">
   <content>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0">
       <children>
           <ImageView fitHeight="212.0" fitWidth="195.0" pickOnBounds="true" preserveRatio="true">
               <image>
                   <Image url="@../../images/gaming-console.png" />
               </image>
           </ImageView>
           <Label text="WELCOME" textFill="BLUE">
               <font>
                   <Font name="DejaVu Sans Bold" size="36.0" />
               </font>
           </Label>
           <TabPane prefHeight="200.0" prefWidth="200.0" side="BOTTOM" tabClosingPolicy="UNAVAILABLE">
               <tabs>
                   <Tab text="Connect" />
                   <Tab text="Launch Game" />
                   <Tab text="Game Store" />
                   <Tab text="Notifications" />
                   <Tab text="Chat Window" />
               </tabs>
           </TabPane>
           <Pagination pageCount="5" />
       </children>
       <padding>
           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
       </padding>
      </VBox>
   </content>
</ScrollPane>
